<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/">
    
    <mediaDisplay
        name                = "photoView"
        backgroundColor     = "77:47:39"
        sideColorBottom     = "77:47:39"
        imageBorderColor    = "77:47:39"
        itemBackgroundColor = "77:47:39"
        centerXPC           = "2"
        centerYPC           = "55"
        centerHeightPC      = "50"
        sideTopHeightPC     = "0"
        bottomYPC           = "0"
        showHeader          = "no"
        showDefaultInfo     = "no"
        itemOffsetXPC       = "20"
        itemOffsetYPC       = "77"
        itemGapXPC          = "0.8"
        itemGapYPC          = "1.4"
        itemWidthPC         = "5"
        itemHeightPC        = "8"
        drawItemText        = "no"
        forceFocusOnItem    = "no"
        sideBottomHeightPC  = "0"
    >
        <script>
            isSuccess = %status%;
        </script>

        <text align="left" offsetXPC="18" offsetYPC="20" widthPC="60" heightPC="12" fontSize="22" foregroundColor="174:156:139">
            <script>
                if(isSuccess != 0){
                    print("Сообщение отправлено");
                }
                else{
                    print("Невозможно отправить сообщение");
                }
            </script>
            <foregroundColor>
                <script>
                    if(isSuccess != 0){
                        print("174:156:139");
                    }
                    else{
                        print("174:156:139");
                    }
                </script>
            </foregroundColor>
        </text>
        
        <onUserInput>
            userInput = currentUserInput();
            
            /* exit */
            if(userInput == "ENTR" || userInput == "enter"){
                /*postMessage("return"); - back to previous page */
                postMessage("home");
                postMessage("guide");
                /* - */
                postMessage("enter");
                postMessage("ENTR");
            }
        </onUserInput>        
        
        <!-- system progress -->
	<idleImage> image/POPUP_LOADING_01.png </idleImage>
	<idleImage> image/POPUP_LOADING_02.png </idleImage>
	<idleImage> image/POPUP_LOADING_03.png </idleImage>
	<idleImage> image/POPUP_LOADING_04.png </idleImage>
	<idleImage> image/POPUP_LOADING_05.png </idleImage>
	<idleImage> image/POPUP_LOADING_06.png </idleImage>
	<idleImage> image/POPUP_LOADING_07.png </idleImage>
	<idleImage> image/POPUP_LOADING_08.png </idleImage>
    </mediaDisplay>
    
</rss>