<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/">
    
    <script>
        /* keyboard settings */
        keyboard        = null; /* current */
        keysCount       = 80;
        keysRus         = "%keysRus%";
        keysUpperRus    = "%keysUpperRus%";
        keysEng         = "%keysEng%";
        keysUpperEng    = "%keysUpperEng%";
        
        /* filed style */
        fieldColorFocus     = "239:239:228";
        fieldColorUnFocus   = "130:171:58";
        
        /* default */
        isMessageFocus  = 1; /* boolean flag */
        inputPhone      = '';
        inputMessage    = '';
        keyboard        = keysRus;
        setFocusItemIndex(0);
    </script>
    
    <mediaDisplay
        name                = "photoView"
        sliding             = "no"
        rowCount            = "5"        
        columnCount         = "16"
        backgroundColor     = "236:240:212"
        imageBorderColor    = "236:240:212"
        itemBackgroundColor = "236:240:212"
        centerXPC           = "2"
        centerYPC           = "55"
        centerHeightPC      = "50"
        sideTopHeightPC     = "0"
        bottomYPC           = "0"
        showHeader          = "no"
        showDefaultInfo     = "no"
        itemOffsetXPC       = "6"
        itemOffsetYPC       = "54"
        itemGapXPC          = "0.8"
        itemGapYPC          = "1.4"
        itemWidthPC         = "4.6"
        itemHeightPC        = "7"
        rollItems           = "no"
        drawItemText        = "no"
        forceFocusOnItem    = "yes"
        sideBottomHeightPC  = "0"
    >
        
        <!-- background image -->
        <backgroundDisplay>
            <image offsetXPC="0" offsetYPC="0" widthPC="100" heightPC="100">
                %localImage%/background.png
            </image>
        </backgroundDisplay>
        
        <!-- title -->
        <image offsetXPC="20" offsetYPC="8" widthPC="12" heightPC="2">
            %localImage%/label.png
        </image>
        <text offsetXPC="35" offsetYPC="6" widthPC="20" heightPC="4" fontSize="14" foregroundColor="201:206:172">
            На номера beeline
        </text>
        <image offsetXPC="56" offsetYPC="8" widthPC="14" heightPC="2">
            %localImage%/label.png
        </image>
        
       <!-- switch image -->
        <image offsetXPC="16" offsetYPC="21" widthPC="3" heightPC="3">
            %localImage%/switch.png
        </image>
        
        <!-- phone number -->
            <!-- unfocus -->
            <image redraw="yes" offsetXPC="20" offsetYPC="12" widthPC="50" heightPC="8">
                <script>
                    if(isMessageFocus != 0){
                        print("%localImage%/field_phone.png");
                    }
                    else{
                        print("");
                    }
                </script>            
            </image>
            <!-- focus -->
            <image redraw="yes" offsetXPC="20" offsetYPC="12" widthPC="50" heightPC="8">
                <script>
                    if(isMessageFocus != 0){
                        print("");
                    }
                    else{
                        print("%localImage%/field_phone_focus.png");
                    }
                </script>
            </image>
            <!-- active field -->
            <text redraw="yes" offsetXPC="22" offsetYPC="12" widthPC="40" heightPC="8" fontSize="16">
                <script>
                    out = "+7 " + inputPhone;
                    if(isMessageFocus == 0){
                        out += " _";
                    }
                    print(out);
                </script>
                <foregroundColor>
                    <script>
                        if(isMessageFocus != 0){
                            print(fieldColorUnFocus);
                        }
                        else{
                            print(fieldColorFocus);
                        }
                    </script>
                </foregroundColor>
            </text>
            
        <!-- message -->
            <!-- unfocus -->
            <image redraw="yes" offsetXPC="20" offsetYPC="24" widthPC="50" heightPC="24">
                <script>
                    if(isMessageFocus != 0){
                        print("");
                    }
                    else{
                        print("%localImage%/field_message.png");
                    }
                </script>            
            </image>
            <!-- focus -->
            <image redraw="yes" offsetXPC="20" offsetYPC="24" widthPC="50" heightPC="24">
                <script>
                    if(isMessageFocus != 0){
                        print("%localImage%/field_message_focus.png");
                    }
                    else{
                        print("");
                    }
                </script>
            </image>
            <!-- active field -->
            <text redraw="yes" align="left" lines="4" offsetXPC="21" offsetYPC="25" widthPC="48" heightPC="22" fontSize="16">
                <script>
                    out = inputMessage;
                    if(isMessageFocus != 0){
                        out += " _";
                    }
                    print(out);
                </script>
                <foregroundColor>
                    <script>
                        if(isMessageFocus != 0){
                            print(fieldColorFocus);
                        }
                        else{
                            print(fieldColorUnFocus);
                        }
                    </script>
                </foregroundColor>
            </text>
            
        <!-- count of symbols -->
        <text offsetXPC="65" offsetYPC="48" widthPC="15" heightPC="6" fontSize="12" foregroundColor="109:114:80">
            12 / 140
            <!-- <script>sprintf("%s / ", page) + pages;</script> -->
        </text>
        
        <!-- keys -->
        <itemDisplay>
            <script>
                idx     = getQueryItemIndex();
                focus   = getFocusItemIndex();
                key     = getStringArrayAt(keyboard, idx);
                
                /*  */
                if(focus == idx){
                    bgColor = "216:220:189";
                    color   = fieldColorUnFocus;
                }
                else{
                    bgColor = "177:181:150";
                    color   = fieldColorFocus;
                }
            </script>
            
            <!-- simple keys style -->
            <text align="center" offsetXPC="0" offsetYPC="0" widthPC="100" heightPC="100" fontSize="22">
                <script> getStringArrayAt(keyboard, idx); </script>
                <foregroundColor><script> print(color); </script></foregroundColor>
                <backgroundColor><script> print(bgColor); </script></backgroundColor>
            </text>
            
            <!-- control keys style -->
                <!-- switch keyboard -->
                <image offsetXPC="0" offsetYPC="0" widthPC="100" heightPC="100">
                    <script>
                        if(key == "CHG"){
                            print("");
                        }
                        else{
                            print("");
                        }
                    </script>
                </image>
                <!-- caps lock -->
                <image offsetXPC="0" offsetYPC="0" widthPC="100" heightPC="100">
                    <script>
                        if(key == "CPS"){
                            print("");
                        }
                        else{
                            print("");
                        }
                    </script>
                </image>
                <!-- backspace -->
                <image offsetXPC="0" offsetYPC="0" widthPC="100" heightPC="100">
                    <script>
                        if(key == "BSP"){
                            print("");
                        }
                        else{
                            print("");
                        }
                    </script>
                </image>
                <!-- send message -->
                <image offsetXPC="10" offsetYPC="15" widthPC="80" heightPC="70">
                    <script>
                        if(key == "SND"){
                            print("%localImage%/send.png");
                        }
                        else{
                            print("");
                        }
                    </script>
                </image>
        </itemDisplay>
        
        <!-- key handler -->
        <onUserInput>
            userInput   = currentUserInput();
            idx         = getQueryItemIndex();
            
            /* switch field */
            if(userInput == "PGDN" || userInput == "pagedown"){
                isMessageFocus = 1;
            }
            else if(userInput == "PGUP" || userInput == "pageup"){
                isMessageFocus = 0;
            }
            
            /* place char */
            if(userInput == "ENTR" || userInput == "enter"){
                char = getStringArrayAt(keyboard, idx);
                if(isMessageFocus != 0){
                    inputMessage += char;
                }
                else{
                    inputPhone += char;
                }
            }
        </onUserInput>
        
        <!-- system progress -->
	<idleImage> image/POPUP_LOADING_01.png </idleImage>
	<idleImage> image/POPUP_LOADING_02.png </idleImage>
	<idleImage> image/POPUP_LOADING_03.png </idleImage>
	<idleImage> image/POPUP_LOADING_04.png </idleImage>
	<idleImage> image/POPUP_LOADING_05.png </idleImage>
	<idleImage> image/POPUP_LOADING_06.png </idleImage>
	<idleImage> image/POPUP_LOADING_07.png </idleImage>
	<idleImage> image/POPUP_LOADING_08.png </idleImage>
    </mediaDisplay>
    
    <channel>
        <!-- to rendering process -->
        <itemSize>
            <script> print(keysCount); </script>
        </itemSize>
    </channel>
</rss>